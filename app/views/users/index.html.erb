<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Username</th>
      <th>Cellphone</th>
      <th>Country</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar.url(:thumb) %></td>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.cellphone %></td>
        <td><%= user.country %></td>
        <td><%= user.city %></td>
        <td><%= link_to 'Edit', edit_user_registration_path %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>